FROM ubuntu:18.04 as os-update
MAINTAINER Brad Aagaard <baagaard@usgs.gov>

RUN apt-get update \
    && DEBIAN_FRONTEND="noninteractive" apt-get install -y --no-install-recommends \
      g++ \
      make \
      file \
      automake \
      autoconf \
      libtool \
      curl \
      ssh \
      python3-dev \
      libpython3.6 \
      python3-pip \
      python3-setuptools \
      python3-coverage \
      zlib1g-dev \
      unzip \
      git \
      ca-certificates \
      libcppunit-1.14.0 \
      libcppunit-dev \
      libopenmpi-dev \
      libopenmpi2 \
      openmpi-bin \
      openmpi-common \
      lcov \
      gdb \
      valgrind \
      vim-common \
      vim-runtime \
      vim-nox

COPY docker/certs/ /usr/local/share/ca-certificates
RUN update-ca-certificates
RUN apt-get clean


ENV PYTHON_VERSION 3.6


CMD /bin/bash
