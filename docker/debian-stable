FROM debian:stable as os-update
LABEL maintainer="Brad Aagaard <baagaard@usgs.gov>"

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
      g++ \
      make \
      file \
      automake \
      autoconf \
      libtool \
      curl \
      python3-dev \
      libpython3.7 \
      python3-pip \
      python3-setuptools \
      python3-coverage \
      zlib1g-dev \
      unzip \
      git \
      ca-certificates \
      libcppunit-dev \
      libmpich-dev \
      mpich \
      lcov \
      gdb \
      valgrind \
      vim-common \
      vim-runtime \
      vim-nox

COPY docker/certs/ /usr/local/share/ca-certificates
RUN update-ca-certificates
RUN apt-get clean


ENV PYTHON_VERSION 3.7


CMD /bin/bash
